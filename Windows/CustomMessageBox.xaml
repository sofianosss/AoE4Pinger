<Window x:Class="AoE_Pinger.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="200" Width="400" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="Transparent" WindowStyle="None">

    <!-- Outer Border and Background -->
    <Grid>
        <Border Background="#2b2b2b" BorderBrush="#FFD700" BorderThickness="2" CornerRadius="10" Padding="10">
            <Grid>
                <!-- Message Content -->
                <TextBlock Name="MessageTextBlock" FontSize="16" Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" />

                <!-- OK Button -->
                <Button Content="OK" Width="100" Height="30" Background="#3A5FCD" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="OkButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
